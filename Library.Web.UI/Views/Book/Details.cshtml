@model LibraryMVC.Domain.Entities.Book
@{
    ViewData["Title"] = "MrLibrary";
    Layout = "../../Views/Shared/BookLayout.cshtml";
}


<div class="container" style="max-width:600px ; margin:auto;">
    <h2>Details</h2>
  
   
        <input type="hidden" asp-for="Id" />
        <div class="user-card-header">

            <img class="user-avatar" src="@Model.BookImage" alt="book" />
        </div>
        <div class="form-group">
            <label asp-for="Title" class="control-label">Title</label>
        <input readonly asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genre" class="control-label">Genre</label>
        <input readonly asp-for="Genre" class="form-control" />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Author" class="control-label">Author</label>
        <input readonly asp-for="@Model.Author" class="form-control" />
            <span asp-validation-for="@Model.Author" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Description" class="control-label">Description</label>
        <input readonly asp-for="@Model.Description" class="form-control" />
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Pages" class="control-label">Pages</label>
        <input readonly asp-for="@Model.Pages" class="form-control" />
            <span asp-validation-for="@Model.Pages" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.ReadCount" class="control-label">ReadCount</label>
            <input readonly asp-for="@Model.ReadCount" class="form-control" />
            <span asp-validation-for="@Model.ReadCount" class="text-danger"></span>
        </div>
    
        <div class="form-group">
    
            <a asp-action="Index" class="mb-4 mt-4 btn btn-outline-primary">Back</a>
        </div>
     
</div>