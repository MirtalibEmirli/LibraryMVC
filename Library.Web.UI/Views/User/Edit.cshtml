@model Library.Web.UI.Models.UserEditViewModel
@{
    ViewData["Title"] = "MrLibrary";
    Layout = "../../Views/Shared/UserLayout.cshtml";
}


<div class="container">
    <h2>Edit User</h2>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="User.Id" />
        <div class="user-card-header">
            <img class="user-avatar" src="@Url.Content(Model.User.ProfileImageUrl)" alt="user" />

        </div>
        <div class="form-group">
            <label asp-for="User.FirstName" class="control-label">First Name</label>
            <input asp-for="User.FirstName" class="form-control" />
            <span asp-validation-for="User.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="User.LastName" class="control-label">Last Name</label>
            <input asp-for="User.LastName" class="form-control" />
            <span asp-validation-for="User.LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="User.Age" class="control-label">Age</label>
            <input asp-for="User.Age" class="form-control" />
            <span asp-validation-for="User.Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="User.Speciality" class="control-label">Speciality</label>
            <input asp-for="User.Speciality" class="form-control" />
            <span asp-validation-for="User.Speciality" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="User.ProfileImageUrl" class="control-label">Change Profile Image </label>
            <input id="image" name="ProfileImageFile" src="@Model.User.ProfileImageUrl" accept="image/*" type="file" class="form-control" />
            <span asp-validation-for="User.ProfileImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" style="" class=" mb-4 mt-4 btn btn-primary">Save User</button>
            <a asp-action="Delete" asp-route-id="@Model.User.Id" class="mb-4 mt-4 btn btn-outline-primary">Delete</a>
            <a asp-action="Index" class="mb-4 mt-4 btn btn-outline-primary">Cancel</a>
        </div>
    </form>
</div>