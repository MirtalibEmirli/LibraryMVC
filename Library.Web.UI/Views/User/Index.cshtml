@{
    ViewData["Title"] = "MrLibrary";
    Layout = "../../Views/Shared/UserLayout.cshtml";
}

@model List<LibraryMVC.Domain.Entities.User>

<div class="user-grid">
    @foreach (var item in Model)
    {
        <div class="user-card">
            <div class="user-card-header">
                <span class="pro">PRO</span>
                <img src="@item.ProfileImageUrl" class="card-img-top rounded-circle mx-auto mt-3" alt="User Profile" style="width: 100px; height: 100px; object-fit: cover;">

            </div>
            <div class="user-card-body">
                <h3>@item.FirstName @item.LastName</h3>
                <p class="speciality">@item.Speciality</p>
            
            </div>
            <div class="user-card-footer">
                <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="User" class="btn btn-edit">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Details" asp-controller="User" asp-route-id="@item.Id" class="btn btn-details">
                    <i class="fas fa-info-circle"></i> Details
                </a>
            </div>
        </div>
    }
</div>