


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] MrLibrary</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        /* Custom Styles */
        .navbar-custom {
            background-color: #2575fc;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: white !important;
            }

                .navbar-custom .nav-link:hover {
                    color: #ffdd57 !important;
                }

        .footer-custom {
            background-color: #2575fc;
            color: white;
            padding: 20px 0;
            margin-top: 50px;
        }

        .border-primary:hover {
            border-color: #0d6efd !important; /* Daha tünd göy */
        }
        .stat-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

            .stat-card i {
                font-size: 2rem;
                color: #2575fc;
                margin-bottom: 10px;
            }

            .stat-card h3 {
                font-size: 2rem;
                margin: 10px 0;
                color: #333;
            }

            .stat-card p {
                color: #777;
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            <a class="navbar-brand" href="#">MrLibrary</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="User" asp-action="Index" >Users</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Book" asp-action="Index">Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Course" asp-action="Index">Courses</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div>
        @RenderBody()
    </div>
    <!-- Footer -->
    <footer class="footer-custom text-center">
        <div class="container">
            <p>&copy; 2025 MrLibrary. All rights reserved.</p>
            <p>
                Follow us on:
                <a  target="_blank" href="https://www.linkedin.com/in/mirtalib-emirli-a66922287/?originalSubdomain=azs" style="margin-left:6px" class=" text-white"><i class="fab fa-linkedin"></i></a>
                <a target="_blank" style="margin-left:6px" href="#" class="text-white"><i class="fab fa-twitter"></i></a>
                <a target="_blank" style="margin-left:6px" href="#" class="text-white"><i class="fab fa-instagram"></i></a>
            </p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>